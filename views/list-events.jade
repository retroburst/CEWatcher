extends layout

block content
    h5.
        List of Events

    table(class="table table-striped table-bordered table-hover")
        thead
            tr
                th Date
                th Identifier
                th Name
                th Old Rate
                th New Rate
                th Triggered Rules
        tbody
            each event, j in model.events
                tr
                    td #{context.viewHelpers.formatDate(event.created)}
                    td #{event.ri_id}
                    td #{event.ri_name}
                    td(class="danger") #{event.old_rate}
                    td(class="success") #{event.new_rate}
                    td #{event.triggered_rules}

    include ./includes/pagination.jade